extends layout

block content
  h1= title

  div
    h2 Invite a friend to this game
    p Give this URL to your friend
    input(id='url' type='text' disabled)

  div
    input(type='hidden' value='#{gameId}')
    div(id='playerId')

  div
    div(id='0' class='cell top-row left-column') 0
    div(id='1' class='cell top-row middle-column') 1
    div(id='2' class='cell top-row right-column') 2
    div(id='3' class='cell middle-row left-column') 3
    div(id='4' class='cell middle-row middle-column') 4
    div(id='5' class='cell middle-row right-column') 5
    div(id='6' class='cell bottom-row left-column') 6
    div(id='7' class='cell bottom-row middle-column') 7
    div(id='8' class='cell bottom-row' right-column) 8
  
  script(src='/javascripts/game-gui.js')
